<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0;net7.0</TargetFrameworks>
		<Nullable>enable</Nullable>
		<AssemblyName>ServiceRegistration</AssemblyName>
		<RootNamespace>ServiceRegistration</RootNamespace>
		<Title>Service Registration and Decoration in ASP.NET Core</Title>
		<Version>1.0.0</Version>
		<Authors>Jani Giannoudis</Authors>
		<Copyright>(c) 2023 by Jani Giannoudis, Switzerland</Copyright>
		<Description>Service Registration and Decoration in ASP.NET Core</Description>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/Giannoudis/ServiceRegistration</RepositoryUrl>
		<RepositoryType>GitHub</RepositoryType>
		<PackageId>ServiceRegistration.NET</PackageId>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

</Project>
